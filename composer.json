{
    "name": "spryker-sdk/evaluator",
    "type": "project",
    "license": "proprietary",
    "description": "The tool for evaluating Spryker shops",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "composer/semver": "^3.3",
        "guzzlehttp/guzzle": "^7.5",
        "spryker-sdk/security-checker": "^0.2.0",
        "spryker-sdk/utils": "^0.2.0",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/filesystem": "^6.0",
        "symfony/flex": "^1.17|^2",
        "symfony/framework-bundle": "^6.0",
        "symfony/monolog-bundle": "^3.8",
        "symfony/process": "^6.0",
        "symfony/runtime": "^6.0",
        "symfony/serializer": "^6.0",
        "symfony/stopwatch": "^6.0",
        "symfony/uid": "^6.0",
        "symfony/yaml": "^6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6",
        "spryker/code-sniffer": "^0.17.18"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "dealerdirect/phpcodesniffer-composer-installer": false
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SprykerSdk\\Evaluator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerSdkTest\\Evaluator\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan",
        "test": "phpunit",
        "test-qa": "phpunit tests/Acceptance/",
        "test-unit": "phpunit tests/Unit/",
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^6.0"
        }
    },
    "bin": [
        "bin/evaluator"
    ]
}
